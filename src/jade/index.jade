include parts/mixins


html
  head
    meta(charset='UTF-8')
    title NodeNode
    link(
      href='node_modules/bootstrap/dist/css/bootstrap.min.css'
      rel='stylesheet'
    )
    link(
      href='assets/css/style.css'
      rel='stylesheet'
    )

    include parts/scripts

  body(ng-app='nodeNote')
    .container-fluid
      .row(ng-controller='DirectoryTree')
        .col-md-3
          button(ng-click='save(currentOpenFileScope.item.path)') Save
          +dirTree('tree')

        .col-md-3
          +notesList('notesInCurrentFolder')

        .col-md-6
          textarea(ng-model='text' ui-tinymce)


script#dir-tree-tpl(type='text/ng-template')
  +dirTree('item.children')
